@model EntityLayer.Concrete.Ability

<div class="modal" id="abilityAdd">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Ability</h4>
            </div>
            @using (Html.BeginForm("Add", "Ability", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        @Html.Label("Name")
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Degree")
                        @Html.TextBoxFor(x => x.Degree, new { @class = "form-control", @placeholder = "Degree", @type = "number" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="fcbtn btn btn-outline btn-success btn-1e">New Ability</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>