
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">Toplam kategori sayısı</h3>
                    <ul class="list-inline two-part">
                        <li><i class="icon-people text-info"></i></li>
                        <li class="text-right"><span class="counter">@ViewBag.Category</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">Yazılım kategorisine ait başlık sayısı</h3>
                    <ul class="list-inline two-part">
                        <li><i class="icon-folder text-purple"></i></li>
                        <li class="text-right"><span class="counter">@ViewBag.Software</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">Yazar adında 'a' harfi geçen yazar sayısı</h3>
                    <ul class="list-inline two-part">
                        <li><i class="icon-folder-alt text-danger"></i></li>
                        <li class="text-right"><span class="">@ViewBag.Writer</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">En fazla başlığa sahip kategori adı</h3>
                    <ul class="list-inline two-part">
                        <li><i class="ti-wallet text-success"></i></li>
                        <li class="text-right"><span class="">@ViewBag.Heading</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">Kategori tablosunda durumu true ile false olan kategorilerin sayısal farkı</h3>
                    <ul class="list-inline two-part">
                        <li><i class="ti-wallet text-success"></i></li>
                        <li class="text-right"><span class="">@ViewBag.CategoryStatus</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

