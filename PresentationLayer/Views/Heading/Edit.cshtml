@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Category")
        @Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Category, "Select Heading", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Name")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
    </div>

    <div class="form-group">
        <button type="submit" class="fcbtn btn btn-outline btn-success btn-1e">Update Heading</button>
    </div>
}

