@model EntityLayer.Concrete.Image

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("FileUpload", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.TextAreaFor(x => x.Name, 10, 0, new { @class = "form-control", @placeholder = "Description" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(x => x.Url, new { @class = "form-control", @type = "file" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(x => x.ImageCategoryId, (IEnumerable<SelectListItem>)ViewBag.Image, "Select Image Category", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <button type="submit" class="fcbtn btn btn-outline btn-pinterest">New Image</button>
    </div>
}


