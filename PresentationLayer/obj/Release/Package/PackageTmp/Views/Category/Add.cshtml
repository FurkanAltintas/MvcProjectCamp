@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Add", "Category",FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("CATEGORY NAME")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Category Name" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        @Html.Label("CATEGORY DESCRIPTION")
        @Html.TextAreaFor(x => x.Description, 5, 10, new { @class = "form-control", @placeholder = "Category Description" })
        @Html.ValidationMessageFor(x => x.Description)
    </div>

    <button type="submit" class="fcbtn btn btn-outline btn-success btn-1e">New Category</button>
}